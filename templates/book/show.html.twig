{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_book_details'|trans({'%id%': book.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_book_details'|trans({'%id%': book.id|default('')}) }}</h1>
    {% if book is defined and book|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ book.id }}</dd>
            <dt>{{ 'label_book_name'|trans }}</dt>
            <dd>{{ book.bookName }}</dd>
            <dt>{{ 'label_book_desc'|trans }}</dt>
            <dd>{{ book.bookDesc }}</dd>
            <dt>{{ 'label_release_year'|trans }}</dt>
            <dd>{{ book.releaseYear }}</dd>
            <dt>{{ 'label_category_name'|trans }}</dt>
            <dd>{{  book.category.categoryName }}</dd>
            <dt>{{ 'label_author_name'|trans }}</dt>
            <dd>{{  book.author.authorName}}</dd>
            <dt>{{ 'label_publisher_name'|trans }}</dt>
            <dd>{{  book.publisher.publisherName }}</dd>
            {#            <dt>{{ 'label_tag'|trans }}</dt>#}
            {#            {%  for booktags in book.bookTags %}#}
            {#                <dd><a href="{{ url('tag_show', {'id': booktags.id}) }}" title="{{ booktags.id }}">#}
            {#                        {{ booktags.id }}#}
            {#                    </a></dd>#}
            {#            {% endfor %}#}


        </dl>
        <p>
            <a href="{{ url('author_show', {id: book.author.id}) }}" title="{{ 'go_to_author'|trans }}">
                {{ 'go_to_author'|trans({'%id%': book.author.id|default('')})  }}
            </a>
        </p>
        <p>
            <a href="{{ url('category_show', {id: book.category.id}) }}" title="{{ 'go_to_category'|trans }}">
                {{ 'go_to_category'|trans({'%id%': book.category.id|default('')})  }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_book_delete'|trans({'%id%': book.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_book_delete'|trans({'%id%': book.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('book_delete', {id: book.id}) }) }}
    {{ form_widget(form) }}
    <p>{{ 'sure_to_remove_book'|trans }} "{{ book.bookName }}" {{ 'by'|trans }} {{ book.author.authorName }}? </p>
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_delete'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('book_show', {id: book.id}) }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_password_edit'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_password_edit'|trans }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('pass_edit', {id: user.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_edit'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('user_show', {id: user.id}) }}" class="btn btn-link">
            {{ 'action_back_to_details'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_details'|trans({'%id%': book.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_user_details'|trans({'%id%': book.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_user_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label_user_nick'|trans }}</dt>
            <dd>{{ user.userData.nick }}</dd>
            <dt>{{ 'label_first_name'|trans }}</dt>
            <dd>{{ user.userData.firstName }}</dd>
            <dt>{{ 'label_last_name'|trans }}</dt>
            <dd>{{ user.userData.lastName }}</dd>
        </dl>
        <p>
            <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action_edit'|trans }}">
                {{ 'action_edit'|trans }}
            </a>
        </p>
        <p>
            <a href="{{ url('user_delete', {id: user.id}) }}" title="{{ 'action_delete'|trans }}">
                {{ 'action_delete'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}


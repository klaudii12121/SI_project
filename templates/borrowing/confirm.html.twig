{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_borrowing_confirm'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_borrowing_confirm'|trans }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('borrow_confirm', {id: borrowing.id}) }) }}
    {{ form_widget(form) }}
    <p>{{ 'sure_to_confirm_book'|trans }} "{{ book.bookName }}" {{ 'byUser'|trans }} {{ borrowing.user.userData.nick }}? </p>
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_confirm'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('borrow_all') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_borrowing_create'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_borrowing_create'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('borrow_create', {id: book.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('borrow_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}